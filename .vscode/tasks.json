{
    "tasks": [
        {
            "type": "shell",
            "label": "build",
            "command": "gcc",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.o",
                "-O2",
                "-std=c++17",
                "-Wall",
                "-Wextra",
                "-DDEBUG",
                "-fno-ms-extensions",
                "-lstdc++",
                "-lm",
            ],
            "options": {
                "cwd": "${fileDirname}"
            }
        },
    ],
    "version": "2.0.0"
}